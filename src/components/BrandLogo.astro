---
import { Image } from "astro:assets";
import logo from "@images/starlight/screwfast_logo.svg";

const { class: className } = Astro.props;
---

<span class="flex items-center gap-x-2">
  <Image
    src={logo}
    alt="Amber Aardvark"
    class:list={[className, "h-6 w-auto sm:h-10"]}
    loading="eager"
  />
  <span class="text-sm font-bold text-neutral-800 dark:text-neutral-200 sm:text-xl">
    Amber Aardvark Analytics
  </span>
</span>
