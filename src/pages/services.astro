---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/dashboard-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/hero-image.avif";
import constructionWorkers from "@images/features-image.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/person-working.avif";
import progressBuilding from "@images/dashboard-image.avif";
import underConstruction from "@images/features-image.avif";
import { SITE } from "@data/constants";
import { getRelativeUrl } from "@utils/utils";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Data Strategy & Advisory",
    subTitle:
      "Navigating the complex landscape of modern data analytics requires a clear roadmap. We help you define your data strategy, assess your current maturity, and identify high-impact use cases. Our advisory services ensure your data initiatives align with your business goals and deliver measurable ROI.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Strategic planning session",
    imgTwo: personWorking,
    imgTwoAlt: "Data architect designing solution",
  },
  {
    isRightSection: false,
    title: "Data Engineering & Architecture",
    subTitle:
      "Build a solid foundation for your analytics. We design and implement scalable, secure, and efficient data platforms on Azure. From data lakes to data warehouses, we engineer robust pipelines using Azure Data Factory, Synapse Analytics, and Databricks to ensure your data is accurate, timely, and accessible.",
    img: beforeAfter,
    imgAlt: "Data architecture diagram",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "#",
  },
  {
    isRightSection: true,
    title: "Power BI & Visualization",
    subTitle:
      "Turn data into insights with stunning, interactive dashboards. Our Power BI experts create intuitive visualizations that tell a compelling story. We follow best practices for data modeling (Star Schema) and DAX optimization to ensure your reports are fast, reliable, and easy to use.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Team reviewing Power BI dashboard",
    imgTwo: aerialView,
    imgTwoAlt: "Data visualization on screen",
  },
  {
    isRightSection: false,
    title: "Microsoft Fabric Implementation",
    subTitle:
      "Embrace the future of analytics with Microsoft Fabric. We help you migrate to and optimize this all-in-one analytics solution. Whether it's OneLake, Direct Lake mode, or Real-Time Intelligence, we guide you through the adoption of Fabric to unify your data estate.",
    img: usingTools,
    imgAlt:
      "Microsoft Fabric interface",
  },
  {
    isRightSection: true,
    title: "Managed Analytics Services",
    subTitle:
      "Focus on your business while we handle your data operations. Our managed services provide ongoing monitoring, support, and enhancements for your data platform. We ensure high availability, performance optimization, and proactive issue resolution.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Monitoring dashboard",
    imgTwo: underConstruction,
    imgTwoAlt: "Team collaborating on code",
    btnExists: true,
    btnTitle: "Read more",
    btnURL: "#",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
const metaDescription =
  "Expert data analytics and engineering services. From strategy to implementation, Amber Aardvark Analytics helps you unlock the value of your data with the Microsoft Data Platform.";
const ogTitle = "Data Analytics Services | Amber Aardvark";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": `${SITE.url}/services`,
    url: `${SITE.url}/services`,
    name: "Data Analytics Services | Amber Aardvark",
    description:
      "Expert data analytics and engineering services. From strategy to implementation, Amber Aardvark Analytics helps you unlock the value of your data with the Microsoft Data Platform.",
    isPartOf: {
      "@type": "WebSite",
      url: SITE.url,
      name: "Amber Aardvark",
      description:
        "Amber Aardvark Analytics offers top-tier data engineering and analytics consulting services.",
    },
    inLanguage: "en-US",
  }}
>
  {/* MainSection is the introductory section of the page, it also contains a CTA button */}
  <MainSection
    title="Transforming Data into Value"
    subTitle="At Amber Aardvark Analytics, we specialize in turning complex data challenges into competitive advantages. Our comprehensive suite of services covers the entire data lifecycle, ensuring you have the insights you need to drive your business forward."
    btnExists={true}
    btnTitle="Schedule a Consultation"
    btnURL={getRelativeUrl("contact")}
  />
  {/* RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  */}
  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  {/* FeaturesStats section showcases essential stats valuable to users */}
  <FeaturesStats
    title="By the Numbers"
    subTitle="Our commitment to quality and reliability is evident in every project we undertake. At Amber Aardvark Analytics, we are dedicated to delivering industry-leading services that ensure your construction projects are built to last."
    mainStatTitle="96%"
    mainStatSubTitle="of our clients rate their experience with Amber Aardvark as exceptional"
    stats={[
      {
        stat: "99.8%",
        description: "project completion rate",
      },
      {
        stat: "5,000+",
        description: "successful installations",
      },
      {
        stat: "85%",
        description: "client growth year-over-year",
      },
    ]}
  />
</MainLayout>
