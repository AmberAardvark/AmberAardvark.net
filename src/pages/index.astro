---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import TestimonialsSection from "@components/sections/testimonials/TestimonialsSection.astro";
import PricingSection from "@components/sections/pricing/PricingSection.astro";
import FAQ from "@components/sections/misc/FAQ.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/amber-aardvark-features.png";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/amber-aardvark-map.png";
import construction from "@images/dashboard-image.avif";
import tools from "@images/amber-aardvark-features.png";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";
import { getRelativeUrl } from "@utils/utils";

const avatarSrcs: Array<string> = [
  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <AnnouncementBanner
    btnId="dismiss-button"
    btnTitle="Explore Amber Aardvark on GitHub"
    url="https://github.com/AmberAardvark/AmberAardvark.net"
  />

  <HeroSection
    title=`Discover the Power of Your Data with <span
        class="text-yellow-500 dark:text-yellow-400 text-outline">Amber Aardvark</span>`
    subTitle="Expert consultancy for the Microsoft Data Platform. We transform raw data into actionable insights using Power BI, Azure, and Fabric."
    primaryBtn="Our Services"
    primaryBtnURL={getRelativeUrl("services")}
    secondaryBtn="Contact Us"
    secondaryBtnURL={getRelativeUrl("contact")}
    withReview={true}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.9</span> / 5`
    starCount={5}
    reviews=`From Over <span class="font-bold">50+</span> Enterprise Clients`
    src={heroImage}
    alt="Data analytics dashboard on a screen"
  />

  <ClientsSection
    title="Trusted by Data-Driven Organizations"
    subTitle="Partnering with industry leaders to deliver scalable data solutions."
    partners={partnersData}
  />

  <FeaturesGeneral
    title="Data Solutions for the Modern Enterprise"
    subTitle="We help you navigate the complexities of the modern data stack. From migration to visualization, we are your partners in data excellence."
    src={featureImage}
    alt="Abstract data visualization graphic"
    features={features}
  />

  <FeaturesNavs
    title=`Tailored <span class="text-yellow-500 dark:text-yellow-400 text-outline">Data Solutions</span> for your business needs.`
    tabs={[
      {
        heading: "Power BI & Visualization",
        content:
          "Transform complex data into clear, interactive stories. Our Power BI experts design intuitive dashboards that drive decision-making and democratize data access across your organization.",
        svg: "dashboard",
        src: tools,
        alt: "Interactive Power BI dashboard showing sales metrics",
        first: true,
      },
      {
        heading: "Azure Data Engineering",
        content:
          "Build robust, scalable data pipelines with Azure Synapse and Data Factory. We engineer the backbone of your data infrastructure to ensure reliability, security, and performance.",
        svg: "tools",
        src: dashboard,
        alt: "Azure data pipeline architecture diagram",
        second: true,
      },
      {
        heading: "Microsoft Fabric",
        content:
          "Future-proof your analytics with Microsoft Fabric. We help you unify your data estate, leveraging OneLake and real-time intelligence to stay ahead of the curve.",
        svg: "house",
        src: construction,
        alt: "Microsoft Fabric interface showing data lineage",
      },
    ]}
  />

  <TestimonialsSection
    title="Accelerate Your Insights"
    subTitle="See how we've helped other organizations transform their data landscape and drive business value."
    ;
    testimonials={[
      {
        content:
          "Amber Aardvark Analytics revolutionized our reporting. Their Power BI optimization reduced our report load times by 90%, and the new data warehouse gives us a single source of truth we can trust.",
        author: "Sarah Jenkins",
        role: "VP of Data Strategy | TechFlow Corp",
        avatarSrc:
          "https://images.unsplash.com/photo-1593104547489-5cfb3839a3b5?q=80&w=1453&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D8&auto=format&fit=facearea&facepad=2&w=320&h=320&q=80",
      },
    ]}
    statistics={[
      {
        count: "500+",
        description:
          "Power BI reports deployed across various industries",
      },
      {
        count: "30%",
        description:
          "average reduction in data processing costs for our clients",
      },
      {
        count: "100%",
        description:
          "success rate in on-premise to Azure cloud migrations",
      },
      {
        count: "24/7",
        description: "monitoring and support for critical data pipelines",
      },
    ]}
  />

  <PricingSection pricing={pricing} />

  <FAQ title="Frequently<br />asked questions" faqs={faqs} />

  <HeroSectionAlt
    title="Ready to Transform Your Data?"
    subTitle="Contact us today to schedule a consultation and discover how Amber Aardvark Analytics can help you achieve your data goals."
    url={import.meta.env.BASE_URL + "contact"}
  />
</MainLayout>
