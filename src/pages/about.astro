---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/dashboard-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/hero-image.avif";
import constructionWorkers from "@images/features-image.avif";
import aerialView from "@images/aerial-view.avif";
import usingTools from "@images/person-working.avif";
import progressBuilding from "@images/dashboard-image.avif";
import underConstruction from "@images/features-image.avif";
import { SITE } from "@data/constants";
import { getRelativeUrl } from "@utils/utils";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "The Legend of the Amber Aardvark",
    subTitle:
      "Why an Aardvark? And why Amber? The Aardvark is nature's expert excavator, famous for its tenacity and ability to sniff out and dig deep to find exactly what it's looking for. Amber, on the other hand, is fossilized tree sap that captures and preserves a perfect snapshot of the world as it was at a specific moment in time. Archaeologists prize amber for the insights it reveals about ancient ecosystems.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Data excavation concept",
    imgTwo: personWorking,
    imgTwoAlt: "Preserved insights",
  },
  {
    isRightSection: false,
    title: "Curiosity & Tenacity",
    subTitle:
      "For us, the Amber Aardvark is the ultimate symbol of our mission. We embody the aardvark's curiosity and tenacity, digging deep into your data repositories to uncover information that has been locked away. We thrive on the unexpected. In our experience, the most transformative insights often begin with the observation, 'That's peculiar.' We chase these anomalies, knowing they are often the harbingers of the next great 'ah-ha' moment for your business. Like amber, we treat your data as a precious resource that holds the key to understanding your business's past, present, and future.",
    img: beforeAfter,
    imgAlt: "Unlocking data insights",
    btnExists: false,
  },
  {
    isRightSection: true,
    title: "Our Philosophy",
    subTitle:
      "We believe that data is not just a byproduct of business operations; it is a strategic asset waiting to be refined. Our methodology combines rigorous engineering with creative problem-solving. We don't just build pipelines; we build pathways to understanding. By discovering these key insights, we help revolutionize the way our clients conduct business, turning raw information into competitive advantage.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Team collaboration",
    imgTwo: aerialView,
    imgTwoAlt: "Strategic overview",
  },
];

const pageTitle: string = `About Us | ${SITE.title}`;
const metaDescription =
  "Discover the story behind Amber Aardvark Analytics. Learn about our philosophy, our methodology, and the unique symbolism of our mascot.";
const ogTitle = "About Us | Amber Aardvark";
---

<MainLayout
  title={pageTitle}
  customDescription={metaDescription}
  customOgTitle={ogTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "AboutPage",
    "@id": `${SITE.url}/about`,
    url: `${SITE.url}/about`,
    name: "About Us | Amber Aardvark",
    description:
      "Discover the story behind Amber Aardvark Analytics. Learn about our philosophy, our methodology, and the unique symbolism of our mascot.",
    isPartOf: {
      "@type": "WebSite",
      url: SITE.url,
      name: "Amber Aardvark",
      description:
        "Amber Aardvark Analytics offers top-tier data engineering and analytics consulting services.",
    },
    inLanguage: "en-US",
  }}
>
  <MainSection
    title="Unearthing Value, Preserving Truth"
    subTitle="At Amber Aardvark, we are more than just consultants. We are data archaeologists and engineers, dedicated to finding the hidden gems within your organization."
    btnExists={true}
    btnTitle="Work With Us"
    btnURL={getRelativeUrl("contact")}
  />

  {
    articles.map((article) => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  
  <FeaturesStats
    title="Our Impact"
    subTitle="We measure our success by the value we create for our clients."
    mainStatTitle="100%"
    mainStatSubTitle="Client Satisfaction"
    stats={[
      {
        stat: "50+",
        description: "Enterprise Projects Delivered",
      },
      {
        stat: "10TB+",
        description: "Data Processed Daily",
      },
      {
        stat: "24/7",
        description: "Support & Monitoring",
      },
    ]}
  />
</MainLayout>
